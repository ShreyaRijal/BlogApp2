<!--User can view their comment and delete it using the form.-->

@model BlogApp2.Models.CommentModel

@{
    ViewData["Title"] = "Delete Comment";
}

<h3> Are you sure you want to delete this comment?</h3>

<textarea readonly rows="3" cols="100"
          style="width:100%;
                height:100%;"> @Html.DisplayFor(model => model.CommentText)
        </textarea>


<form asp-action="DeleteComment" asp-controller="Blog" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="@Model.CommentsId" name="ID" />
    <input type="hidden" asp-for="@Model.BlogCommentedOnID" name="BlogID" />
    <button type="submit" value="Delete">Delete</button>
</form>

<a asp-action="Read" asp-route-id="@Model.BlogCommentedOnID">Back to Blog</a>


