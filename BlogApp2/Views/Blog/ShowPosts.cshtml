@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model IEnumerable<BlogApp2.Models.BlogModel>

<input type="button" value="Create blog" onclick="location.href='@Url.Action("Create", "Blog")'">

<html xmlns="http://www.w3.org/1999/xhtml">
<body>
    <ul>
        @foreach (var blog in Model)
        {
        <li>
            @blog.BlogTitle @blog.BlogEntry

            @*<a href="/Blog/Update"> Update </a> |
        <a href="/ShowPosts/Details"> Details </a> |
        <a href="/Blog/Delete"> Delete </a>*@

            <td>
                <a asp-action="Update" asp-route-id="@blog.BlogEntryID">Update</a> |
                <a asp-action="Read" asp-route-id="@blog.BlogEntryID">Read</a> |
                <a asp-action="Delete" asp-route-id="@blog.BlogEntryID">Delete</a>
            </td>

        </li>

        }
    </ul>

</body>
</html>

